# SpecLab - Configuração de ambiente
# Copiar para .env e preencher com valores reais

DB_HOST=127.0.0.1
DB_PORT=8889
DB_NAME=exipt_especificacoes
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

BASE_PATH=/especificacoes
APP_ENV=local

# Chave de encriptação para passwords SMTP (32 hex chars)
# Gerar com: php -r "echo bin2hex(random_bytes(16));"
APP_ENCRYPTION_KEY=

# SSL: verificação de certificado SMTP (true por defeito; false para hosting partilhado)
SMTP_VERIFY_SSL=true
